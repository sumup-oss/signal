{
  "name": "perf-script",
  "version": "0.0.1",
  "main": "index.js",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "commit": "git-cz",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "mkdir -p __reports__ && jest --json --outputFile=__reports__/jest-results.json --ci --coverage --runInBand",
    "lint": "foundry run eslint . --ext .js,.jsx,.json,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "lint:ci": "yarn lint --format junit -o __reports__/eslint-results.xml"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-strip": "^2.1.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@sumup/performance-observer": "^1.0.2",
    "dotenv": "^16.0.1",
    "rollup": "^2.75.3",
    "rollup-plugin-terser": "^7.0.2",
    "tti-polyfill": "^0.2.2"
  },
  "devDependencies": {
    "@sumup/foundry": "^5.0.0",
    "@types/jest": "^27.5.0",
    "@types/tti-polyfill": "^0.2.1",
    "cz-conventional-changelog": "3.3.0",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.9.10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
